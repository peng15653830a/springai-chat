{
  "permissions": {
    "allow": [
      "Bash(mvn:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "post-edit": [
      {
        "name": "阿里巴巴P3C快速检查",
        "command": "./scripts/code-review.sh p3c",
        "workingDirectory": ".",
        "patterns": [
          "**/*.java"
        ],
        "timeout": 30000,
        "failOnError": false,
        "description": "Java文件修改后自动执行P3C代码规范检查"
      }
    ],
    "pre-commit": [
      {
        "name": "完整代码质量检查",
        "command": "./scripts/code-review.sh",
        "workingDirectory": ".",
        "timeout": 60000,
        "failOnError": true,
        "description": "提交前执行完整的代码质量检查，包括P3C、编译、格式化等"
      }
    ]
  },
  "mcpServers": {
    "mysql": {
      "command": "uv",
      "args": [
        "run",
        "mysql_mcp_server"
      ],
      "env": {
        "MYSQL_HOST": "localhost",
        "MYSQL_PORT": "3306",
        "MYSQL_USER": "root",
        "MYSQL_PASSWORD": "xupeng2016",
        "MYSQL_DATABASE": "ai_chat"
      },
      "description": "UV run MySQL MCP server for ai_chat database"
    }
  }
}