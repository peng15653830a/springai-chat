<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.novel.mapper.NovelReferenceMapper">

  <resultMap id="refMap" type="com.example.novel.entity.NovelReference">
    <id property="id" column="id"/>
    <result property="sessionId" column="session_id"/>
    <result property="messageId" column="message_id"/>
    <result property="source" column="source"/>
    <result property="title" column="title"/>
    <result property="excerpt" column="excerpt"/>
    <result property="similarity" column="similarity"/>
    <result property="url" column="url"/>
    <result property="createdAt" column="created_at"/>
  </resultMap>

  <insert id="insert" parameterType="com.example.novel.entity.NovelReference" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO novel_references (session_id, message_id, source, title, excerpt, similarity, url, created_at)
    VALUES (#{sessionId}, #{messageId}, #{source}, #{title}, #{excerpt}, #{similarity}, #{url}, NOW())
  </insert>

  <select id="selectBySessionId" resultMap="refMap">
    SELECT * FROM novel_references WHERE session_id = #{sessionId} ORDER BY created_at DESC
  </select>

  <select id="selectByMessageId" resultMap="refMap">
    SELECT * FROM novel_references WHERE message_id = #{messageId} ORDER BY created_at DESC
  </select>

</mapper>

